{
	"name": "cicd",
	"dockerComposeFile": [
		"../docker-compose.yml"
	],
	"service": "devcontainer",
	"workspaceFolder": "/workspaces/cicd",
	"postCreateCommand": "cd $WORKSPACE/",
	"customizations": {
		"vscode": {
			"settings": {
				"terminal.integrated.profiles.linux": {
					"bash": {
						"path": "bash",
						"icon": "terminal-bash"
					}
				}
			},
			"extensions": [
				"hashicorp.terraform",
				"yzhang.markdown-all-in-one",
				"github.vscode-github-actions"
			]
		}
	}
}